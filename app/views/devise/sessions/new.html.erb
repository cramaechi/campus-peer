<% content_for :head do %>
  <title>CampusPeer | Sign In</title>
  <%= stylesheet_link_tag "devise/SessionsNew", :media => "all" %>
<% end %>

<div id="content-title"><h3>Sign in</h3></div>
<div id="content-form">

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:novalidate => 'novalidate'}) do |f| %>

	  	<table cellspacing="10" cellpadding="0">
	  	  <tr>
	  	  	<td>
	  	  	  <div><%= f.label :email %></div>
	  	  	  <div style="padding-top: 5px"><%= f.email_field :email, :class => "text-box" %></div>
	  	  	</td>
	  	  </tr>

	  	  <tr>
	  	  	<td>
	  	  	  <div><%= f.label :password %></div>
	  	  	  <div style="padding-top: 5px"><%= f.password_field :password, :class => "text-box"  %></div>
	  	  	</td>
	  	  </tr>

	  	  <tr>
	  	  	<td>
	  	  	  <div style="float:right"><%= f.submit "", :type => :image, :src => "/assets/WelcomePage/loginBtn42.png" %></div>
	  	  	  
	  	  	  <div style="float:left; font-size:13px;">
	  	  	    <% if devise_mapping.rememberable? -%>
		  	      <%= f.check_box :remember_me %> <%= f.label :remember_me, "Don't Forget Me" %>
			  	<% end -%>
			  </div>
	  	  	</td>
	  	  </tr>

	  	</table>
	<% end %>		
</div>

<div id="user-links">
  <%= link_to "SIGN UP", new_registration_path(resource_name) %>
  <b>Â·</b>
  <%= link_to "PASSWORD LOOKUP?", new_password_path(resource_name) %>
</div>
