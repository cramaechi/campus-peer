<% content_for :head do %>
  <title>CampusPeer | Change your password</title>
  <%= stylesheet_link_tag "devise/PasswordEdit", :media => "all" %>
<% end %>

<div id="content-title"><h3>Change your password</h3></div>
<div id="content-form">
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
	  <% flash.now[:notice] = resource.errors.full_messages %>
	  <%= f.hidden_field :reset_password_token %>

	  <table cellspacing="10">
	  	<tr><td><%= f.label :password, "New password" %></td></tr>
	  	<tr><td><%= f.password_field :password, :class => "text-box", :autofocus => true %></td></tr>
	  	<tr><td><%= f.label :password_confirmation, "Confirm new password" %></td></tr>
	  	<tr><td><%= f.password_field :password_confirmation, :class => "text-box" %></td></tr>
	  	<tr><td><%= f.submit "", :type => :image, :src => "/assets/Shared/SubmitBtn5.png" %></td></tr>
	  </table>

	<% end %>

  	<p id="info">* Reset password instructions will be sent to you.</p>
</div>

<div id="user-links">
  <%= link_to "SIGN IN", new_session_path(resource_name) %>  
  <b>Â·</b>
  <%= link_to "SIGN UP", new_registration_path(resource_name) %>
</div>