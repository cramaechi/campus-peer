<% unless @books.empty? %>
  <table class="table1">
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Author</th>
      <th>ISBN 10/13</th>
      <th>Publisher</th>
    </tr>

  <% @books.each_with_index do |book, index| %>
    <tr <%= index % 2 == 0 ? "class = r0" : "class = r1" %>>
      <td id="bk-cover-cell"><%= link_to (image_tag(Book.cover(book.isbn13), :alt => "#{book.isbn13} Cover", :class => "bk-cover")), new_sell_book_item_path({:book => book}) %></td>
      <td class="truncate"><%= link_to book.title, new_sell_book_item_path({:book => book}) %></td>
      <td><%= book.author %></td>
      <td id="isbn-cell"><%= book.isbn10 %> <br/> <%= book.isbn13 %></td>
      <td id="publisher-cell"><%= book.publisher%></td>
    </tr>
  <% end %>
  </table>

  <br />
  <%= paginate @books %>
<% end %>
